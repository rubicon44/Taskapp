- if blog.errors.present?
  ul#error_explanation
    - blog.errors.full_messages.each do |message|
      li= message

= form_with model: blog, local: true do |f|
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control', id: 'blog_name'
  .form-group
    = f.label :description
    = f.text_area :description, rows: 5, class: 'form-control', id: 'blog_description'
  = f.submit nil, class: 'btn btn-primary'